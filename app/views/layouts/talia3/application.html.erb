<!DOCTYPE html>
<html>
  <head>
    <title><%= Talia3.config['site_name']%> - Configuration</title>
    <%= csrf_meta_tag %>
    <%= javascript_include_tag :defaults %>
  </head>
  <body>
    <div class="container">
      <section>
        <%= content_tag :div, render('talia3/partials/logout') %>
        <%= content_tag :div, link_to("Admin", talia3_admin_path)%>
        <%= content_tag :div, link_to("Back", :back)%>
        <%= render 'talia3/partials/messages', :locals => {:flash => flash} %>
        <hr/>
        <br/>
        <%= yield %>
      </section>
      <br/>
      <hr/>
      <%= debug(params) if Rails.env.development? %>
    </div>
  </body>
</html>
